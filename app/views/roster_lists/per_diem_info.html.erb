


<p id="notice"><%= notice %></p>

<h1>Per Diem Report </h1>

<%= form_tag(per_diem_info_path , method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>



<table class = "table table-striped table-hover">
  <thead>
    <tr>
     
      <th> Week </th>
      <th>Employee</th>
      <th> Per Diem </th>
      <th> Note </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roster_lists.each do |roster_list| %>
      <tr>
       
       	<td><%= roster_list.roster.week %></td>
        <td><%= roster_list.employee.full_name %></td>
        <td><%= roster_list.perdiem %></td>
	


       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

